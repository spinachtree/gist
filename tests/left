gist
	exp   = add | sub | term
	add   = exp '+' term
	sub   = exp '-' term
	term  = mul | div | val
	mul   = term '*' val
	div   = term '/' val
	val   = int | '(' exp ')'
	int   : '0'..'9'+

parse	1+2*3-4

gist
	S = A | B
	A = S a | a
	B = S b | b
	a : 'a'
	b : 'b'

parse	aabbaaa

gist
	S = A / B
	A = S a / a
	B = S b / b
	a : 'a'
	b : 'b'

fail	aaba

parse	bbabaa

-- twisted -- can't do this....
gist
	a = a 'a' | b
	b = b 'b' | a | c
	c = c 'c' | b | 'd'

ie a = 'd' ('a'|'b'|'c'|'d')*

xparse	dcba

gist
	a = a 'a' | b
	b = b 'b' | c
	c = c 'c' | 'd'

ie  a = 'd' 'c'* 'b'* 'a'*

parse	d

parse	dc
parse	dcba
fail	dcaba
parse	dcb
parse	dccbbaa


